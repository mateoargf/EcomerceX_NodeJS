.inputRegistro:valid {
     background-color: #fff;
     outline-color: #222;
}
.inputRegistro:hover, .inputInicioSesion:hover {
     border: 2px solid #616161;
}   


.formularioRegistro p {
     width: 100%;
     margin: 0;
     text-align: center;
     
