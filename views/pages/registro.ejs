}

main {
     height: 65vh;
     width: 90vw;
     margin: 0 auto;
     }
.contenedor-formularios {
     width: 100%;
     max-width: 500px;
     margin: 0 auto;
     margin-top: 30px;
     padding: 30px 0px;
     border-radius: 5px;
     background-color: #fff;
     box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.contenedor-tabs {
     list-style: none;
     padding: 0;
     margin: 0;
     overflow: hidden;
     border-radius: 5px;
     background: white;
     margin-bottom: 20px;
     display: flex;
     justify-content: center;
     gap:15px;
}




.contenedor-tabs li a {
     display: block;
     color: #333;
     color: rgb(200, 200, 200);
     text-align: center;
     padding: 14px 16px;
     text-decoration: none;
     border-radius: 5px;
     opacity: 0.3;
     background-color: rgb(50,50,50);
     
}

.contenedor-tabs li a:hover {
     background-color: rgb(91, 91, 91 );
     color:white;
     opacity: 0.7;
}

.contenedor-tabs li a.active {
