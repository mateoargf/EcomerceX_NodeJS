        justify-content: space-between;
        width: 85vw;
        margin: 0 auto;
    }

    .text {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-transform: uppercase;
        padding: 30px 0;
    }

    .navInfoPersonal {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .navInfoPersonal h3 {
        font-size: 1.188em;
        font-weight: 500;
        text-transform: uppercase;
        color: #000;
        margin-bottom: 0;

    }

    .navInfoPersonal a {
        text-decoration: none;
        font-size: 1.188em;
        font-weight: 500;
        color: #c6c6c6;
        transition: all 0.3s ease;
    }

    .navInfoPersonal a:hover {
        color: #000;
        transition: all 0.3s ease;
    }


    .CATALOG {
