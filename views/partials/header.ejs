<script>
    function googleTranslateElementInit() {
        new google.translate.TranslateElement({
            pageLanguage: 'es',  // Establece el idioma original
            autoDisplay: false,
        }, 'google_translate_element');
    }
  
    document.getElementById('toggleTranslationBtn').addEventListener('click', function () {
        var select = document.querySelector('.goog-te-combo');
        var languageIndicator = document.getElementById('languageIndicator');

        if (select && languageIndicator) {
            if (select.value === 'en') {
                // Si el idioma actual es inglés, cambia a español
                select.value = 'es';
                languageIndicator.textContent = 'esp';
            } else {
                // Si el idioma actual no es inglés, cambia a inglés
                select.value = 'en';
                languageIndicator.textContent = 'eng';
            }

            var event = new Event('change');
            select.dispatchEvent(event);
        }
    });
</script>
